# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_SECRET=CHANGE_ME_LONG_RANDOM
TELEGRAM_ADMIN_IDS=123456789,987654321
TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_BOT_USERNAME=your_bot_username

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://vpn_user:password123@postgres:5432/vpn_bot
DATABASE_POOL_SIZE=20

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# VPN SERVICE API
# ============================================
VPN_API_URL=https://vpn-server.example.com
VPN_API_TOKEN_PRIMARY=primary_token_here
VPN_API_TOKEN_SECONDARY=secondary_token_here
VPN_API_TIMEOUT=15000

# ============================================
# SECURITY
# ============================================
ENCRYPTION_KEY=32_BYTE_HEX_KEY_HERE_32_BYTE_HEX_KEY_HERE
JWT_SECRET=LONG_RANDOM_JWT_SECRET
BCRYPT_ROUNDS=10

# ============================================
# FEATURES & LIMITS
# ============================================
TRIAL_DURATION_DAYS=1
REFERRAL_REWARD_DAYS=3
GRACE_PERIOD_HOURS=24
NOTIFICATION_CHECK_INTERVAL_HOURS=1
MAX_REQUESTS_PER_MINUTE=100
BROADCAST_RATE_LIMIT=25
WEBHOOK_TIMEOUT=5000

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
NODE_ENV=development

# ============================================
# BACKUP
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
DATA_RETENTION_DAYS=365

# ============================================
# PORT
# ============================================
PORT=3000

